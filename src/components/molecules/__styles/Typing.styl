.typing
  position relative
  text-align center
  width 100%
  height 100%

  .body
    position absolute
    top 50%
    left 50%
    width 100%
    transform translate(-50%, -50%)

  p
    margin 0
    font-size 1.1em

  .question
    font-size 4em
    font-weight 500

  .rubi
    margin-bottom 20px

  .answer
    position relative
    display inline-block

    .guide
      color #444

    .input
      position absolute
      top 0
      left 0
      color #f00

  .timer
    padding 20px
    text-align left
    font-size 1.2em

    span
      margin-right 10px
      font-size 0.8em